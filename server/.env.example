# 服务配置
PORT=3000
NODE_ENV=development

# Polymarket API 配置
# Gamma Markets API - 用于获取市场数据（公开，无需认证）
POLYMARKET_GAMMA_API_URL=https://gamma-api.polymarket.com
# CLOB API - 用于交易（需要 API Key 和钱包私钥，目前不使用）
POLYMARKET_CLOB_API_URL=https://clob.polymarket.com
# WebSocket - 实时价格推送（CLOB 订单簿数据）
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws
POLYMARKET_WS_ENABLED=true
# API Key - 仅在进行交易时需要（当前项目不需要）
POLYMARKET_API_KEY=

# Redis 配置 (可选)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# CORS 配置
CORS_ORIGIN=http://localhost:5173

# 缓存配置 (秒)
CACHE_TTL_LIVE=45
CACHE_TTL_UPCOMING=120
CACHE_TTL_ENDED=86400

# 限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
