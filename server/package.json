{
  "name": "polysniper-backend",
  "version": "1.0.0",
  "description": "Backend service for PolySniper - NBA prediction market monitoring system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:data": "ts-node src/test/dataSourceTest.ts",
    "test:quick": "ts-node src/test/quickStart.ts",
    "test:price": "ts-node src/test/testPriceRetrieval.ts",
    "test:poly-debug": "ts-node src/test/debugPolymarketAPI.ts",
    "test:compare-speed": "ts-node src/test/compareScoreSpeed.ts",
    "test:parallel": "ts-node src/test/testParallelPerformance.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
